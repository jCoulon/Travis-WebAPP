div(ng-controller="dashboardIndicateur as dashboardCtrl")
    indicateur-area(options="dashboardCtrl.dashboardOptions")

    div#addnote(ng-controller="addNote")
        h3 Ajouter une note
        input#titrenote(type="text", placeholder="Titre")
        div#textnote(placeholder="Rédigez votre note ici", contenteditable="true")
        input#sharenote(type="checkbox")
        label(for="sharenote") Partagée
        label.check(for="sharenote")
        div(ng-controller="userNoteController")
                div.tags-wrapper
                    div#tagsList.tags-cloud
                        div.tag(ng-repeat="selectedTag in selectedTags")
                            span.tagName {{selectedTag}}
                            span &nbsp;
                                b(ng-click="removeTag($index)") x
                        input#searchInput.form-control(type="text", placeholder="À partager avec", ng-keydown="checkKeyDown($event)", ng-model="searchText", ng-change="search()")
                    ul#suggestions.suggestions-list
                        li.blockSpan(ng-repeat="suggestion in suggestions" ng-click="addToSelectedTags($index)", ng-mouseover="$parent.selectedIndex=$index", ng-class="{active: selectedIndex===$index}") {{suggestion}}
        input(type="button", ng-click="addNote()", value="Ajouter")

    button#materialbutton
        img(src="images/icons/add_category.png")